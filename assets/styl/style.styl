* 
	box-sizing border-box


body
	font-family Helvetica
	background-color #2b3e50
	color #ebebeb
	
p li 
	line-height 1.5

 
h1 
	font-family Lato
	font-weight 100
	padding 1em
		 
.flex
	display flex
	
.flex-center
	justify-content center
	
.flex-s-between
	justify-content space-between

.flex-s-around
	justify-content space-around		

.flex-1
	flex 1
	
.flex-2 
	flex 2

.container
	max-width 1000px
	

.wrapper
	margin 0 auto
	padding 0 1em

nav	
	ul	
		list-style none
		margin 0
		padding 0		
	
	li 
		margin-left 1em
	
//VIDEO
.video-c
	position relative
	

.localVideo 
	//position absolute
	height 100%
	width 100%	
	padding 1em
	background-color black
	
		
	&:nth-of-type(2) 
		position fixed 
		right 0 
		bottom 0
		min-width 100% 
		min-height 100%
  		


