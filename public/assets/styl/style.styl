* 
	box-sizing border-box


body
	font-family Helvetica
	background-color #2b3e50
	color #ebebeb
	
p li 
	line-height 1.5

 
h1 
	font-family Lato
	font-weight 100
	padding 1em
		 
.flex
	display flex
	
.flex-center
	justify-content center
	
.flex-start
	justify-content flex-start
	
.flex-end 		
	justify-content flex-end

.flex-s-between
	justify-content space-between

.flex-s-around
	justify-content space-around

.flex-1
	flex 1
	
.flex-2 
	flex 2
	
.align-c
	align-items center

.container
	max-width 1000px
	

.wrapper
	margin 0 auto
	padding 0 1em
// NAV

.nav-tabs
	border-bottom 1px solid #333 
	

nav	
	ul	
		list-style none
		margin 0
		padding 0
		align-items center		
	
	li 
		margin-left 1em
	
//VIDEO
.video-c
	position relative
	

.localVideo 
	
	height 100%
	width 100%	
	padding 1em
	
	
		
video:nth-of-type(2) 
	position absolute
	right 0 
	bottom 0
	max-width 30% 
	padding 1em
	margin-bottom 5px
	
  		
